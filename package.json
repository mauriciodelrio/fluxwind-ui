{
  "name": "fluxwind-ui",
  "version": "0.0.0",
  "private": true,
  "description": "A modern, minimal React component library built on Tailwind CSS with signals-based reactivity",
  "keywords": [
    "react",
    "tailwind",
    "components",
    "design-system",
    "ui-library",
    "signals"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mauriciodelrio/fluxwind-ui.git"
  },
  "license": "MIT",
  "author": "Mauricio Del Rio",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:ui": "turbo run test:ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:e2e:report": "playwright show-report playwright-report",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,css,scss,html,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json,css,scss,html,yml,yaml}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,md,json,css,scss,html,yml,yaml}\"",
    "validate": "pnpm type-check && pnpm lint && pnpm format:check",
    "validate:full": "pnpm format:fix && pnpm lint:fix && pnpm type-check && pnpm build && pnpm test:coverage",
    "fix": "pnpm lint:fix && pnpm format:fix",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish",
    "prepare": "husky install",
    "branch:validate": ".husky/scripts/validate-branch-name.sh",
    "pr:generate": ".husky/scripts/generate-pr-description.sh",
    "pr:generate:main": ".husky/scripts/generate-pr-description.sh main",
    "pr:create": ".husky/scripts/create-pr.sh",
    "pr:create:main": ".husky/scripts/create-pr.sh main",
    "branch:feature": "git checkout develop && git pull && git checkout -b feature/",
    "branch:fix": "git checkout develop && git pull && git checkout -b fix/",
    "branch:docs": "git checkout develop && git pull && git checkout -b docs/",
    "branch:refactor": "git checkout develop && git pull && git checkout -b refactor/",
    "branch:test": "git checkout develop && git pull && git checkout -b test/",
    "branch:chore": "git checkout develop && git pull && git checkout -b chore/",
    "audit": "pnpm audit --audit-level=moderate",
    "audit:fix": "pnpm audit --fix",
    "update:check": "pnpm outdated",
    "update:interactive": "pnpm update --interactive --latest",
    "security:snyk": "snyk test --all-projects",
    "security:snyk:monitor": "snyk monitor --all-projects",
    "security:snyk:fix": "snyk fix"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@commitlint/cli": "18.4.4",
    "@commitlint/config-conventional": "18.4.4",
    "@eslint/eslintrc": "3.2.0",
    "@eslint/js": "9.39.1",
    "@playwright/test": "1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "16.3.0",
    "@typescript-eslint/eslint-plugin": "8.46.3",
    "@typescript-eslint/parser": "8.46.3",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.1.0",
    "husky": "8.0.3",
    "jsdom": "^23.2.0",
    "lint-staged": "16.2.6",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.7.1",
    "turbo": "2.6.0",
    "typescript-eslint": "8.46.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {},
    "patchedDependencies": {},
    "allowedDeprecatedVersions": {},
    "neverBuiltDependencies": []
  }
}
