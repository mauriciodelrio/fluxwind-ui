{
  "name": "@fluxwind/core",
  "version": "0.0.0",
  "description": "Core components for Fluxwind UI",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --config ../../eslint.config.cjs",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "validate:configs": "tsx src/scripts/validate-configs.ts",
    "validate:configs:verbose": "tsx src/scripts/validate-configs.ts --verbose",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@fluxwind/a11y": "workspace:*",
    "@fluxwind/i18n": "workspace:*",
    "@fluxwind/icons": "workspace:*",
    "@fluxwind/themes": "workspace:*",
    "@preact/signals-core": "^1.5.1",
    "class-variance-authority": "0.7.1",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.7",
    "jsdom": "^23.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.1",
    "tsx": "4.20.6",
    "typescript": "^5.3.3",
    "vitest": "^4.0.7"
  },
  "publishConfig": {
    "access": "public"
  }
}
