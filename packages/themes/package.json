{
  "name": "@fluxwind/themes",
  "version": "0.0.0",
  "description": "Design tokens and Tailwind configurations for Fluxwind UI",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./tailwind": "./src/tailwind.config.ts",
    "./variables.css": "./src/variables.css",
    "./variables-components.css": "./src/variables-components.css"
  },
  "files": [
    "dist",
    "src/tailwind.config.ts",
    "src/variables.css",
    "src/variables-components.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --config ../../eslint.config.cjs",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "devDependencies": {
    "tailwindcss": "3.4.17",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
