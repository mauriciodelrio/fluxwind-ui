{
  "name": "@fluxwind/themes",
  "version": "0.0.0",
  "description": "Design tokens and Tailwind configurations for Fluxwind UI",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./tailwind": "./src/tailwind.config.ts",
    "./variables.css": "./src/variables.css",
    "./variables-components.css": "./src/variables-components.css"
  },
  "files": [
    "dist",
    "src/tailwind.config.ts",
    "src/variables.css",
    "src/variables-components.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --config ../../eslint.config.cjs",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "@preact/signals-core": "^1.12.1",
    "@preact/signals-react": "^3.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.12",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "jsdom": "^25.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "3.4.17",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
