{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "composite": false,
    "declarationDir": "./dist",
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "moduleResolution": "node",
    "verbatimModuleSyntax": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
