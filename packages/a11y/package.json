{
  "name": "@fluxwind/a11y",
  "version": "0.0.1",
  "description": "Accessibility utilities and hooks for FluxWind UI - WCAG compliant, signals-based, zero re-renders",
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "aria",
    "react",
    "hooks",
    "screen-reader",
    "keyboard-navigation",
    "focus-management",
    "signals"
  ],
  "author": "Mauricio Del Rio",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@preact/signals-core": "^1.8.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.18",
    "@vitest/coverage-v8": "^4.0.8",
    "jsdom": "^25.0.1",
    "react": "^18.3.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^4.0.8"
  }
}
